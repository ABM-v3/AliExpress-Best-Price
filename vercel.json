{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/**/*",
          "package.json"
        ],
        "maxLambdaSize": "15mb",
        "suppressResponse": false
      }
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot.js",
      "methods": ["POST"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/",
      "dest": "/api/bot.js",
      "methods": ["GET"]
    },
    {
      "src": "/test",
      "dest": "/api/bot.js",
      "methods": ["GET"]
    }
  ]
}
